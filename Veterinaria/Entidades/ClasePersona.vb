Public Class ClasePersona
    Public Nombre As String
    Public Direccion As String
    Public Ci As Short
    Public Telefono As Short

    Public Sub New(nombre As String, direccion As String, ci As Short, telefono As Short)
        Me.Nombre = nombre
        Me.Direccion = direccion
        Me.Ci = ci
        Me.Telefono = telefono
    End Sub

End Class
